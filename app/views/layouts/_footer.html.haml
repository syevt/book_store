%footer.navbar.navbar-inverse.mb-0
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to(t('layouts.header.home'),
              main_app.root_path, class: 'nav-link')
          %li
            = link_to(t('layouts.header.shop'),
              main_app.catalog_index_path, class: 'nav-link')
          - if user_signed_in? && !current_user.admin?
            %li
              = link_to(t('layouts.my_account.orders'), main_app.orders_path,
                class: 'nav-link')
            %li
              = link_to(t('layouts.my_account.settings'),
                main_app.settings_path, class: 'nav-link')
      .col-sm-3
        %p.general-nav-mail support@bookstore.com
        %p.general-nav-number (555)-555-5555
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: 'https://www.facebook.com'}
              %i.fa.fa-facebook{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://twitter.com'}
              %i.fa.fa-twitter{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://plus.google.com'}
              %i.fa.fa-google-plus{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://www.instagram.com'}
              %i.fa.fa-instagram{'aria-hidden': 'true'}
