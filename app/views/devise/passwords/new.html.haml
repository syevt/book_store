%main.container
  .text-center
    %h1.mb-30= t('.forgot_password')
    %p.general-password-text= t('.send_email_instructions')
  = form_for(resource, as: resource_name, url: password_path(resource_name),
    html: { method: :post }, html: {class: 'general-form'}) do |f|
    = devise_error_messages!
    .form-group.mb-25
      = f.email_field(:email, autofocus: true, class: 'form-control',
        placeholder: t('.enter_email'))
    = f.submit(t('.email_instructions'),
      class: 'btn btn-default center-block mb-20')
    .text-center
      = link_to(t('.cancel'), login_path, class: 'in-gold-500 mb-20')
