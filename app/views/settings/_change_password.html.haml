%p.in-gold-500.font-18.mb-25= t('.caption')
= form_for(resource, as: resource_name, url: registration_path(resource_name),
  html: { method: :patch, class: 'general-form-md pb-25' }) do |f|
  = f.hidden_field(:reset_password_token)
  = f.hidden_field(:email, value: current_user.email)
  .form-group.mb-30
    %label.control-label.font-weight-light{for: 'currentPassword'}= |
      t('.old_password') |
    = f.password_field(:current_password, class: 'form-control',
      placeholder: t('.old_password'))
  .form-group.mb-30
    %label.control-label.font-weight-light{for: 'password'}= t('.new_password')
    = f.password_field(:password, class: 'form-control',
      placeholder: t('.new_password'))
  .form-group.mb-40
    %label.control-label.font-weight-light{for: 'confirmPassword'}= t('.confirm')
    = f.password_field(:password_confirmation, class: 'form-control',
      placeholder: t('.confirm'))
  .general-text-align
    = f.submit(t('.change'), class: 'btn btn-default mb-10')
